<div class="card">
  <% if prototype.image.attached? %>
    <%= link_to image_tag(prototype.image.variant(resize: "300x300").processed, alt: prototype.title, class: :card__img), prototype_path(prototype) %>
  <% else %>
    <%= link_to image_tag('https://via.placeholder.com/300', alt: 'デフォルト画像', class: :card__img), prototype_path(prototype) %>
  <% end %>
  <div class="card__body">
    <%= link_to prototype.title, prototype_path(prototype), class: :card__title %>
    <p class="card__summary">
      <%= prototype.catch_copy %>
    </p>
    <% if prototype.user.present? %>
      <%= link_to "by #{prototype.user.name}", user_path(prototype.user), class: :card__user %>
    <% else %>
      <span class="card__user">ユーザー不明</span>
    <% end %>
  </div>
</div>